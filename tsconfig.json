{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,

    /* Modules */
    "moduleResolution": "node",

    /* JavaScript Support */
    // "allowJs": true,
    // "checkJs": true,

    /* Interop Constraints */
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
